<%= form_with(model: kind, local: true, html: {class: "basic-grey"}) do |form| %>
  <h1><%= kind.model_name.human(count: 1) %></h1>

  <script>
      $.notify("<%= if kind.errors.any?
                kind.errors.full_messages.each do |message|
                message
                end end %>")
  </script>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="actions">
    <%= form.submit t('buttons.save'), class: "btn btn-primary" %>
    <%= link_to t('buttons.back'), kinds_path, class: "btn btn-success" %>
  </div>
<% end %>

<div class="basic-grey">
  <script>
      $.notify('<%= notice %>', 'success')
  </script>

  <h1><%= t('activerecord.models.kind.other')%></h1>

  <table>
    <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>
        <td><%= link_to t('buttons.show'), kind %></td>
        <td><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
        <td><%= link_to t('buttons.destroy'), kind, method: :delete, data: {confirm: t('messages.confirm')} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('buttons.new'), new_kind_path, class: 'btn btn-primary' %>
  <%= link_to t('buttons.back'), root_path, class: "btn btn-success" %>
</div>